<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorDeepBule"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentTop="true"
        android:background="@color/colorDeepBule">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.25dp"
            android:layout_alignParentTop="true"
            android:background="#ffffff" />

        <ImageView
            android:id="@+id/back"
            android:layout_width="40dp"
            android:onClick="onBack"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/back2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="设置"
            android:textColor="#ffffff"
            android:textSize="20dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.25dp"
            android:layout_alignParentBottom="true"
            android:background="#ffffff" />
    </RelativeLayout>


    <EditText
        android:id="@+id/inputPhoneNUm"
        android:layout_width="250dp"
        android:inputType="phone"
        android:layout_height="40dp"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_white"
        android:hint="请输入你信任的手机号"
        android:padding="10dp"
        android:textColorHint="#dfdfdf"
        android:textSize="14dp" />

    <ImageView
        android:id="@+id/img"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_above="@id/inputPhoneNUm"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/phone_num" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/inputPhoneNUm"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/currentPhonNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="当前手机号码：空"
            android:textColor="#ffffff"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/ok"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_white"
            android:gravity="center"
            android:padding="10dp"
            android:text="确认"
            android:textColor="#ffffff" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="注意：重新输入手机号，确认后即可更换号码"
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="by Mr.Su"
            android:textColor="#ffffff" />
    </LinearLayout>


</RelativeLayout>